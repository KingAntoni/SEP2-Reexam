<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.GridPane?>

<GridPane xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/8.0.171"
          fx:controller="views.addFacility.FacilityViewController"
          hgap="10" vgap="10">
    <padding>
        <Insets top="10" right="10" bottom="10" left="10"/>
    </padding>

    <TextField fx:id="facilityNameField" GridPane.columnIndex="1" GridPane.rowIndex="0" promptText="Facility Name"/>
    <TextField fx:id="facilityDescriptionField" GridPane.columnIndex="1" GridPane.rowIndex="1" promptText="Description"/>
    <Button text="Create Facility" onAction="#createFacility" GridPane.columnIndex="1" GridPane.rowIndex="2"/>

    <Label text="Facility Name:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
    <Label text="Description:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
</GridPane>
