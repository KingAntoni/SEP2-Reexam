<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>

<GridPane hgap="10" vgap="10" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="views.editFacility.EditFacilityViewController">
    <padding>
        <Insets bottom="10" left="10" right="10" top="10" />
    </padding>

    <TextField fx:id="facilityNameField" promptText="Facility Name" GridPane.columnIndex="2" />
    <TextField fx:id="facilityDescriptionField" promptText="Description" GridPane.columnIndex="2" GridPane.rowIndex="1" />
    <Button onAction="#updateFacility" text="Update Facility" GridPane.columnIndex="2" GridPane.rowIndex="2" />

    <Label text="Facility Name:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
    <Label text="Description:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
    <Button onAction="#backButtonPressed" text="Back" GridPane.rowIndex="2" />

</GridPane>
